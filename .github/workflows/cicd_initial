name: CICD workflow
on: workflow-dispatch
jobs:
  build_and_deploy:
    env:
      imagename: 'actionsimage'
    runs-on: ubuntu-latest
    steps:
      - name: clone code
        uses: actions/checkout@v4
      - name: download Java and Maven
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '11'
          cache: 'maven'
      - name: install docker
        uses: docker/setup-buildx-action@v3
      - name: build code
        run: mvn package
      - name: login to docker
        uses: docker/login-action@v3
        with:
          username: ${{secrets.DOCKERHUB_USERNAME}}
          password: ${{secrets.DOCKERHUB_TOKEN}}
      - name: build and push image to docker
        uses: docker/build-push-action@v6
        with:
          context: .
          push: true
          tags: ${{secrets.DOCKERHUB_USERNAME}}/${{env.imagename}}:latest
      - name: Connect to the Lab and deploy a pod
        uses: cross-the-world/ssh-scp-ssh-pipelines@latest
        with:
          host: 'mittalsonal04gmsl0034.simplilearnlabs.com'
          user: 'mittalsonal04gm'
          pass: 'al04gm0A@4vafq'
          port: 42006
          connect_timeout: 10s
          first_ssh: |
            sudo kubectl run podact-th --image ${{ secrets.DOCKERHUB_USERNAME }}/${{ env.imagename }}:latest
